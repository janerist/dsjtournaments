{
  "Serilog": {
    "Using":  ["Serilog.Sinks.Console", "Serilog.Sinks.RollingFile"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {  
        "Name": "RollingFile",       
        "Args": { 
          "pathFormat": "%APPDATA%\\dsjtournaments\\error-{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss zzz} [{Request}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  
  "FileArchive": {
    "BasePath": "C:\\stats"
  },

  "ConnectionStrings": {
    "DSJTournamentsDB": "Server=localhost;Port=5432;Database=dsjtournaments_dev;Integrated Security=true;Enlist=true"
  },

  "IdentityServer": {
    "Origin": "http://localhost:5000/id",
    "SigningCertPath": ""
  },
  
  "Cors": {
    "Origins": [
      "http://localhost:4200",
      "http://localhost:4201"
    ]
  }
}
