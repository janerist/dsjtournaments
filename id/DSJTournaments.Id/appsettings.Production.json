{
  "Serilog": {
    "MinimumLevel": "Warning",
    "Using":  ["Serilog.Sinks.Console", "Serilog.Sinks.RollingFile"],    
    "WriteTo": [
      { "Name": "Console" },
      {  
        "Name": "RollingFile",       
        "Args": { 
          "pathFormat": "/var/log/dsjtournaments/id-error-{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss zzz} [{Request}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  
  "ConnectionStrings": {
    "DSJTournamentsDB": "SECRET"
  },

  "IdentityServer": {
    "SigningCertPath": "SECRET"
  },
  
  "Cors": {
    "Origins": [
      "https://admin.dsjtournaments.com"
    ]
  }
}
